        xmlns:local="clr-namespace:InstaPGClient"
        mc:Ignorable="d"
        Title="DisplayPostWindow" Height="450" Width="486">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="DescriptionTextBox" Margin="10,349,168,10" Grid.Row="2"/>

        <Image x:Name="ImagePreview" Grid.Row="2" Margin="11,-1,170,132"/>
        <ListBox HorizontalAlignment="Left" Height="325" Margin="341,110,0,0" Grid.RowSpan="3" VerticalAlignment="Top" Width="135"/>
        <TextBlock x:Name="DatePost" HorizontalAlignment="Left" Height="26" Margin="10,323,0,0" Grid.RowSpan="3" VerticalAlignment="Top" Width="126"/>
    </Grid>
</Window>
