<Window x:Class="InstaPGClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InstaPGClient"
        mc:Ignorable="d"
        Title="InstaPG" Height="615" Width="751">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- List of users -->
        <StackPanel Grid.Column="0" Width="185" Background="#FFE8E8E8">
            <Label x:Name="AppName" Content="InstaPG" Height="59" Width="123" Foreground="#FF3776A7" FontFamily="Cascadia Code" FontSize="24"/>
            <StackPanel>
                <TextBox x:Name="UsernameTextBox" Width="160" Height="30" Margin="10" VerticalAlignment="Top" GotFocus="RemovePlaceholder" LostFocus="AddPlaceholder">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Text" Value="Enter username"/>
                            <Style.Triggers>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter Property="Text" Value=""/>
                                    <Setter Property="Foreground" Value="Black"/>
                                </Trigger>
                                <Trigger Property="IsFocused" Value="False">
                                    <Setter Property="Text" Value="Enter username"/>
                                    <Setter Property="Foreground" Value="Gray"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
            </StackPanel>
            <Button Content="Login" Width="100" Height="30" Margin="10" VerticalAlignment="Top" Click="LoginButton_Click"/>
            <ListBox x:Name="ActiveUsersListBox" Height="200" Width="160" Margin="10" FontFamily="Candara" Background="#FFE8E8E8"/>
            <ListBox x:Name="UsersList" Height="280" Width="182" FontFamily="Candara" SelectionChanged="users_SelectionChanged" Background="#FFE8E8E8">
                <!-- List of users TO DO -->
            </ListBox>
            <Image x:Name="LogoutButton" Height="49" Source="/logout.png" Stretch="Fill" Width="56" HorizontalAlignment="Left" MouseUp="LogoutButton_Click"/>
        </StackPanel>

        <!-- Main content -->
        <Grid Grid.Column="1" HorizontalAlignment="Left" Height="605" VerticalAlignment="Top" Width="491">
            <!-- User info panel -->
            <Border BorderBrush="#FFD4D4D4" BorderThickness="1" Margin="10" Padding="10">
                <StackPanel>
                    <TextBlock Text="Nazwa użytkownika" FontWeight="Bold" FontSize="18" Width="181" HorizontalAlignment="Left"/>
                    <TextBlock Text="Opis użytkownika" Foreground="#808080" Width="207" HorizontalAlignment="Left"/>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0" Width="160" HorizontalAlignment="Left">
                        <TextBlock Text="Liczba postów: " FontSize="14"/>
                        <TextBlock Text="3" FontWeight="Bold" FontSize="14"/>
                    </StackPanel>
                    <Button Content="Dodaj zdjęcie" Click="AddPhotoButton_Click" HorizontalAlignment="Left" Margin="0,10,0,0" Height="32" Width="92" RenderTransformOrigin="0.457,0.454"/>
                </StackPanel>
            </Border>

            <!-- Avatar -->
            <Border x:Name="AddPhoto" Grid.Column="1" BorderThickness="1" Margin="10" Padding="10" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image x:Name="UserAvatar" Source="/user_avatar.png" RenderTransformOrigin="1.845,-1.865" Margin="275,-7,29,456"/>
            </Border>

            <!-- User Gallery -->
            <ItemsControl x:Name="UserGallery" Margin="10,165,10,10" Background="#FFF3F3F3">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
            <Button x:Name="AddAvatar" Content="+"  Click="AddAvatarButton_Click" HorizontalAlignment="Left" Height="17" Margin="442,19,0,0" VerticalAlignment="Top" Width="20" Background="White" BorderBrush="#FFF1E7E7" Foreground="#FF132AEA" FontWeight="Bold" FontFamily="Arial Rounded MT Bold"/>
        </Grid>
    </Grid>
</Window>
